<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.LoginFragment"
    android:background="@drawable/shape">


    <ImageView
        android:background="@drawable/shape"
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo" />

    <TextView
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ismedt"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#FAFAFA"
        android:text="Ismingizni kiriting!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
   <EditText
       android:id="@+id/ismedt"
       android:layout_marginTop="100dp"
        android:textAlignment="center"
       android:layout_marginEnd="20dp"
       android:layout_marginStart="20dp"
  android:background="@drawable/edt_shpe"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/yoshedt"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="Yoshingizni kiriting!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <EditText
       android:id="@+id/yoshedt"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/edt_shpe"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/ismedt" />




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saqlashbtn"
        android:textStyle="bold"
        android:textSize="29dp"
        android:text=" Saqlash"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/edt_shpe"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>