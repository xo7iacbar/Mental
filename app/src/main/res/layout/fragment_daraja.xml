<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.DarajaFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape" />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:id="@+id/cardidoson"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/osontxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Oson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:id="@+id/cardidorta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardidoson">
        <TextView
            android:id="@+id/ortatxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="O'rta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:id="@+id/cardidqiyin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardidorta">
        <TextView
            android:id="@+id/qiyintxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Qiyin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>