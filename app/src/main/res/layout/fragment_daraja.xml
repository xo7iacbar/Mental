<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.DarajaFragment"
    android:background="@drawable/shape">

    <ImageView
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo" />



    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:id="@+id/cardidoson"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/osontxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="1-bosqich        "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/light"
            android:layout_marginStart="60dp"
            app:layout_constraintTop_toTopOf="@+id/cardidgame" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:id="@+id/cardidorta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardidoson">
        <TextView
            android:id="@+id/ortatxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="2-bosqich       "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/light"
            android:layout_marginStart="60dp"
            app:layout_constraintTop_toTopOf="@+id/cardidgame" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:id="@+id/cardidqiyin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardidorta">
        <TextView
            android:id="@+id/qiyintxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="3-bosqich       "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/light"
            android:layout_marginStart="60dp"
            app:layout_constraintTop_toTopOf="@+id/cardidgame" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
      android:layout_marginTop="150dp"
        android:id="@+id/cardidgame"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/cardidqiyin">
        <TextView
            android:id="@+id/gametxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Game play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/light"
            android:layout_marginStart="105dp"
            app:layout_constraintTop_toTopOf="@+id/cardidgame" />
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>