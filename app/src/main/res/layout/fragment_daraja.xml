<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.DarajaFragment"
    android:background="@drawable/shape">


    <ImageView
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo" />


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#A4D549"
        android:layout_marginTop="50dp"
        android:id="@+id/cardidoson"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/osontxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="1-bosqich        "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginStart="230dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/level1" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#A4D549"
        android:layout_marginTop="30dp"
        android:id="@+id/cardidorta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardidoson">
        <TextView
            android:id="@+id/ortatxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="2-bosqich       "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginStart="230dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/level2" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#A4D549"
        android:layout_marginTop="30dp"
        android:id="@+id/cardidqiyin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardidorta">
        <TextView
            android:id="@+id/qiyintxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="3-bosqich       "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginStart="230dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/level3" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#A4D549"
      android:layout_marginTop="130dp"
        android:id="@+id/cardidgame"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/cardidqiyin">
        <TextView
            android:id="@+id/gametxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Mini o'yin       "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginStart="230dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/level4" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        app:cardBackgroundColor="#A4D549"
        android:layout_marginTop="130dp"
        android:id="@+id/cardid5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/cardidgame">
        <TextView
            android:id="@+id/judaqiyintxt"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="5-bosqich     "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="14dp"
            android:layout_marginStart="225dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/lvl5" />

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>