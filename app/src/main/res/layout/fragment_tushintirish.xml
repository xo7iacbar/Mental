<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.TushintirishFragment"
    android:background="@drawable/shape">
    <ImageView
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo" />


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#A4D549"
        android:id="@+id/cardid"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Mental arifmetik" />
        <TextView
           android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text=" Bu ilova yordamida  mental arifmetikani yanada chuqurroq o'rganib olishingiz mumkin bo'ladi  sizga birinchi bo'lib 3ta daraja beriladi siz darajalarning birini tanlaysiz  keyin  sizga turli xil savollar beriladi va siz ularni javobini topishingiz uchun ma'lum soniya vaqt beriladi va keyingi savolga o'tadi 20ta savoldan keyin natijangizni bilib olishingiz mumkin."
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintTop_toBottomOf="@+id/cardid"
        android:id="@+id/Tushunarlibtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_btn"
        android:padding="20dp"
        android:text="Tushunarli"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cardid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/cube"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>